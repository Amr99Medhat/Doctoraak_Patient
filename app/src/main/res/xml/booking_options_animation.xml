<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:motion="http://schemas.android.com/tools">

    <Transition
            app:constraintSetEnd="@id/end"
            app:constraintSetStart="@id/start"
            app:duration="300">

    </Transition>

    <Transition
            app:constraintSetEnd="@id/end2"
            app:constraintSetStart="@id/start2"
            app:duration="300">

    </Transition>

    <ConstraintSet android:id="@+id/end">


        <Constraint
                android:id="@id/radiobutton_book_view"
                app:layout_constraintEnd_toEndOf="@id/tv_book_for_another"
                app:layout_constraintStart_toStartOf="@id/tv_book_for_another"
                app:layout_constraintTop_toTopOf="@id/tv_book_for_another"
                app:layout_constraintBottom_toBottomOf="@id/tv_book_for_another">


        </Constraint>

        <Constraint
            android:id="@+id/tv_book_me">

            <CustomAttribute
                    app:attributeName="textColor"
                    app:customColorValue="@color/black" />
        </Constraint>

        <Constraint
                android:id="@+id/tv_book_for_another">

            <CustomAttribute
                    app:attributeName="textColor"
                    app:customColorValue="@color/white" />
        </Constraint>


    </ConstraintSet>
    <ConstraintSet android:id="@+id/start">
        <Constraint
                android:id="@+id/tv_book_me">

            <CustomAttribute
                    app:attributeName="textColor"
                    app:customColorValue="@color/white" />
        </Constraint>

        <Constraint
                android:id="@+id/tv_book_for_another">

            <CustomAttribute
                    app:attributeName="textColor"
                    app:customColorValue="@color/black" />
        </Constraint>

        <Constraint
                android:id="@id/radiobutton_book_view"
                app:layout_constraintEnd_toEndOf="@id/tv_book_me"
                app:layout_constraintStart_toStartOf="@id/tv_book_me"
                app:layout_constraintTop_toTopOf="@id/tv_book_me"
                app:layout_constraintBottom_toBottomOf="@id/tv_book_me"
                >
        </Constraint>



    </ConstraintSet>


    <ConstraintSet android:id="@+id/start2">

        <Constraint
                android:id="@+id/tv_book_me">

            <CustomAttribute
                    app:attributeName="textColor"
                    app:customColorValue="@color/black" />
        </Constraint>

        <Constraint
                android:id="@+id/tv_book_for_another">

            <CustomAttribute
                    app:attributeName="textColor"
                    app:customColorValue="@color/white" />
        </Constraint>

        <Constraint
                android:id="@id/radiobutton_book_view"
                app:layout_constraintEnd_toEndOf="@id/tv_book_for_another"
                app:layout_constraintStart_toStartOf="@id/tv_book_for_another"
                app:layout_constraintTop_toTopOf="@id/tv_book_for_another"
                app:layout_constraintBottom_toBottomOf="@id/tv_book_for_another">
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end2">

        <Constraint
                android:id="@+id/tv_book_me">

            <CustomAttribute
                    app:attributeName="textColor"
                    app:customColorValue="@color/white" />
        </Constraint>

        <Constraint
                android:id="@+id/tv_book_for_another">

            <CustomAttribute
                    app:attributeName="textColor"
                    app:customColorValue="@color/black" />
        </Constraint>

        <Constraint
                android:id="@id/radiobutton_book_view"
                app:layout_constraintEnd_toEndOf="@id/tv_book_me"
                app:layout_constraintStart_toStartOf="@id/tv_book_me"
                app:layout_constraintTop_toTopOf="@id/tv_book_me"
                app:layout_constraintBottom_toBottomOf="@id/tv_book_me"
                >
        </Constraint>

    </ConstraintSet>

</MotionScene>